---
title: <pm-dialog>
description: Dialog used by the Privacy Manager Browser extension
header: <pm-dialog>
component: pm-dialog
---

<div style="width: 200px">
    <pm-dialog id="basic">
      <div data-id="description" slot="body"></div>
    </pm-dialog>

    <pm-dialog id="advanced">
      <div slot="body">
        <form action="#">
          <div class="fieldset-container">
            <div>
              <p>
                <label>
                  <span data-i18n="cookieDialog_domain"></span>
                  <!-- TODO: Revisit the Domain pattern -->
                  <input required="true" data-id="domain" type="text" disabled="disabled" title="Not a valid Domain name" pattern="^[a-zA-Z0-9-_]+\.[a-zA-Z0-9-_.]*">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_name"></span>
                  <input data-id="name" type="text" required="true">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_value"></span>
                  <input data-id="value" type="text" required="true">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_path"></span>
                  <input data-id="path" type="text" title="Should start with '/'" pattern="^\/.*" value="/" required="true">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_expDate"></span>
                    <input data-id="expirationDate" type="date" required="true">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_expTime"></span>
                    <input data-id="expirationTime" type="time" step="1">
                </label>
              </p>
            </div>
            <div>
              <p>
                <label>
                  <span data-i18n="cookieDialog_hostOnyl"></span>
                  <input data-id="hostOnly" type="checkbox">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_httpOnyl"></span>
                  <input data-id="httpOnly" type="checkbox">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_secure"></span>
                  <input data-id="secure" type="checkbox">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_session"></span>
                  <input data-id="session" type="checkbox">
                </label>
              </p>
              <p>
                <label>
                  <span data-i18n="cookieDialog_storeId"></span>
                  <input data-id="storeId" type="number" required="true" value="0">
                </label>
              </p>
            </div>
          </div>
          <div id="cookie-edit-control" class="controls">
            <pm-button data-i18n="cookieDialog_update" data-action="update-cookie"></pm-button>
            <pm-button data-i18n="cookieDialog_delete" data-action="delete-cookie"></pm-button>
          </div>
        </form>
      </div>
  </pm-dialog>

    <pm-dialog id="prompt">
      <div slot="body">
        <div data-i18n="cookieDialog_deleteAll_msg" class="message"></div>
        <div class="controls">
          <pm-button data-i18n="cookieDialog_cancel" data-action="close-dialog"></pm-button>
          <pm-button data-action="delete-all-cookies" data-i18n="deleteAll"></pm-button>
        </div>
      </div>
    </pm-dialog>
  </div>
  <div>
    <div>
      <h3>Basic dialog</h3>
      <pm-button id="basic-btn">Basic</pm-button>
      <pre><code>
const title = "My Title";
const data = {
  description: "My description"
};
pmDialog.showDialog(title, data);
      </code></pre>
    </div>
    <div>
      <h3>Advanced dialog</h3>
      <pm-button id="advanced-btn">advanced</pm-button>
      <pre><code>
const title = "Advanced";
const data = {
  domain: "Domain name",
  name: "Cookie name",
  value: "Cookie value",
  path: "Cookie path",
  expirationDate: "2030-05-15",
  expirationTime: "17:00",
  hostOnly: true,
  httpOnly: false,
  secure: true,
  session: true,
  storeId: 1
};
pmDialog.showDialog(title, data);
      </code></pre>
    </div>
    <div>
      <h3>Prompt dialog</h3>
      <pm-button id="prompt-btn">prompt</pm-button>
      <pre><code>
const title = "Promt dialog";
pmDialog.showDialog(title);
      </code></pre>
    </div>
  </div>
